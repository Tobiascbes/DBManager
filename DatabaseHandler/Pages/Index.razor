@page "/"
@using DatabaseHandler.Data
@using System
@using DatabaseHandler.Models
@inject DBConn dbConn
@inject DBConnModel dbConnModel
<h1>Database</h1>


<div class="dbstring">
    <form class="form">
        <label for="connName">Connection string</label> <br>
        <input type="text" id="connName" @bind="ConnectionString">
        <input type="button" value="Submit" @onclick="@OnClickMethod">
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>name</th>
        </tr>
    </thead>
</table>



@foreach (var group in Records.GroupBy(r => r.TableName))
{
    <table class="table">
        <thead>
            <tr>
                <details>
                    <summary>@group.Key</summary>
                    <table>
                        <thead>
                            <tr class="columnNames">
                                @foreach (var columnName in group.First().ColumnName)
                                {
                                    <th>@columnName</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in group)
                            {
                                <tr class="rowValues">
                                    @foreach (var value in record.RowValue)
                                    {
                                        <td>@value.ToString()</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </details>
            </tr>
        </thead>
    </table>
}

<div>
    <h4>Add a New Database</h4>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" @bind="DatabaseTable">
    </div>
    <div class="form-group">
        <label for="DatabaseQuery">Database Query</label>
        <input type="text" style="resize:none; overflow:auto; width:250px; height:100px;" class="form-control" id="database" width="" @bind="Query"></input>
    </div>
    <button class="btn btn-primary" @onclick="CreateDatabase">Add Database</button>

</div>


@code {
    List<DBConnModel> dbLists = new();
    List<DBConnModel> Records = new();

    public string? ConnectionString { get; set; }
    public string? DatabaseTable { get; set; }
    public string? Query { get; set; }

    public void OnClickMethod()
    {
        dbConnModel.ConnectionString = ConnectionString;
        dbLists = dbConn.Read();
        ReadTable();
    }

    public void ReadTable()
    {
        Records = dbConn.GetAllRecords(dbLists);
    }
    public void CreateDatabase()
    {
        dbConn.Create(ConnectionString, Query, DatabaseTable);
        ReadTable();
    }
}
